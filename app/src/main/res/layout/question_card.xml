<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:id="@+id/cardView"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/text_candidate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="TÃ­tulo"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <View
                android:id="@+id/divider"
                android:layout_width="397dp"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/text_data"
                android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
        <TextView
                android:text="Respondido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_respondido" app:layout_constraintStart_toStartOf="@+id/text_candidate"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                app:layout_constraintEnd_toStartOf="@+id/text_respondido" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/text_candidate"/>
        <TextView
                android:layout_width="256dp"
                android:layout_height="21dp"
                android:id="@+id/text_respondido" app:layout_constraintEnd_toEndOf="@+id/text_candidate"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/text_candidate"
                app:layout_constraintStart_toEndOf="@+id/lbl_respondido" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
        <TextView
                android:layout_width="329dp"
                android:layout_height="87dp"
                android:id="@+id/text_link" app:layout_constraintEnd_toEndOf="@+id/text_respondido"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="@+id/lbl_respondido" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text_respondido"/>
        <TextView
                android:layout_width="323dp"
                android:layout_height="42dp"
                android:id="@+id/text_tags" app:layout_constraintStart_toStartOf="@+id/text_link"
                app:layout_constraintEnd_toEndOf="@+id/text_link" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/text_link"/>
        <TextView
                android:text="Data "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_data" app:layout_constraintStart_toStartOf="@+id/text_tags"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/text_data" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/text_tags"/>
        <TextView
                android:layout_width="271dp"
                android:layout_height="19dp"
                android:id="@+id/text_data" app:layout_constraintEnd_toEndOf="@+id/text_tags"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/text_tags"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>